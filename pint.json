{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal_by_scope"
            }
        },
        "concat_space": {
            "spacing": "one"
        }
    },
    "notPath": [
        "config/",
        "lang/"
    ]
}
